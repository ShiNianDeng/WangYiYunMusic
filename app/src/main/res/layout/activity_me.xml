<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.MeActivity">

    <include layout="@layout/nav_bar" />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginSize"
        android:text="用户名:"
        android:textSize="@dimen/titleSize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHeight"
        android:layout_marginLeft="@dimen/marginSize"
        android:layout_marginTop="@dimen/marginSize"
        android:layout_marginRight="@dimen/marginSize"
        android:background="@drawable/item_commit_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/marginSize"
        android:text="修改密码"
        android:onClick="onChangeClick"
        android:textSize="@dimen/infoSize" />

    <Button
        style="@style/btnCommit"
        android:onClick="onloginOutClick"
        android:layout_marginTop="@dimen/marginSize"
        android:text="退出登录" />

</LinearLayout>